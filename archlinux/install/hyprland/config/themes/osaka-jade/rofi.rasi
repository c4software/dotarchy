/* Th√®me rofi Vert/Ambre */
@define-color selected-text #e1b55e;
@define-color text #ebfff2;
@define-color base #11221C;
@define-color border #214237;
@define-color foreground #ebfff2;
@define-color background #11221C;

* {
    background: @background;
    foreground: @foreground;
    border-color: @border;
    text-color: @text;
    highlight: @selected-text;
    spacing: 2px;
    border: 2px;
    padding: 6px;
    font: "JetBrains Mono 12";
}

window {
    background-color: @background;
    border: 2px;
    border-color: @border;
    padding: 12px;
}

mainbox {
    background-color: @background;
    children: [ inputbar, listview ];
    spacing: 8px;
}

inputbar {
    background-color: @base;
    text-color: @text;
    padding: 6px;
    border: 1px;
    border-color: @border;
}

listview {
    background-color: @background;
    columns: 1;
    spacing: 2px;
    fixed-height: false;
}

element {
    background-color: @background;
    text-color: @text;
    padding: 4px 8px;
    border: 0;
}

element selected {
    background-color: @base;
    text-color: @selected-text;
    border: 1px;
    border-color: @selected-text;
}
